<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent">


    <LinearLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:gravity="center">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/exit_dialog_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:text="@string/exit_dialog_text"
            />

            <Button
                android:id="@+id/temp_add_meal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:text="@string/enter_meal_text"
            />

            <TextView
                android:id="@+id/dialog_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/dialog_title_text"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/exit_dialog_btn"
                android:textSize="20sp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
            />

            <RelativeLayout
                    android:id="@+id/meal_name_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_below="@+id/dialog_title"
            >

                <TextView
                        android:id="@+id/meal_name_txt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/meal_name_title"
                        android:paddingStart="4dp"
                        android:paddingEnd="4dp"
                />


                <EditText
                        android:id="@+id/meal_name_edit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/meal_name_txt"
                        android:text=""
                        android:inputType="textAutoCorrect"
                        android:paddingStart="4dp"
                        android:paddingEnd="4dp"
                />

            </RelativeLayout>

            <RelativeLayout
                    android:id="@+id/meal_protein_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_below="@+id/meal_name_layout"
            >

                <TextView
                        android:id="@+id/meal_protein_txt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/meal_protein_title"
                        android:paddingStart="4dp"
                        android:paddingEnd="4dp"
                />


                <EditText
                        android:id="@+id/meal_protein_edit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/meal_protein_txt"
                        android:text=""
                        android:inputType="textAutoCorrect"
                        android:paddingStart="4dp"
                        android:paddingEnd="4dp"
                />

            </RelativeLayout>

            <RelativeLayout
                    android:id="@+id/restaurant_name_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_below="@+id/meal_protein_layout"
            >

                <TextView
                        android:id="@+id/restaurant_name_txt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/restaurant_name_title"
                        android:paddingStart="4dp"
                        android:paddingEnd="4dp"
                />


                <EditText
                        android:id="@+id/restaurant_name_edit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/restaurant_name_txt"
                        android:text=""
                        android:inputType="textAutoCorrect"
                        android:paddingStart="4dp"
                        android:paddingEnd="4dp"
                />

            </RelativeLayout>

            <RelativeLayout
                    android:id="@+id/restaurant_location_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_below="@+id/restaurant_name_layout"
            >

                <TextView
                        android:id="@+id/restaurant_location_txt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/restaurant_location_title"
                        android:paddingStart="4dp"
                        android:paddingEnd="4dp"
                />


                <EditText
                        android:id="@+id/restaurant_location_edit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/restaurant_location_txt"
                        android:text=""
                        android:inputType="textAutoCorrect"
                        android:paddingStart="4dp"
                        android:paddingEnd="4dp"
                />

            </RelativeLayout>

            <RelativeLayout
                    android:id="@+id/description_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_below="@+id/restaurant_location_layout"
            >

                <TextView
                        android:id="@+id/description_txt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/description_title"
                        android:paddingStart="4dp"
                        android:paddingEnd="4dp"
                />


                <EditText
                        android:id="@+id/description_edit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/description_txt"
                        android:text=""
                        android:inputType="textAutoCorrect"
                        android:paddingStart="4dp"
                        android:paddingEnd="4dp"
                />

            </RelativeLayout>

        </RelativeLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>