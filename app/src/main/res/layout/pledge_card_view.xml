<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:gravity="center"
              android:paddingBottom="8dp"
              android:animateLayoutChanges="true"
>

    <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/pledge_card_view"
    >

        <RelativeLayout
                android:id="@+id/pledgecard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:paddingVertical="2dp"
                android:paddingHorizontal="2dp"
        >

            <TextView
                    android:id="@+id/pledge_name"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"


                    android:layout_centerVertical="true" android:layout_marginLeft="0dp"/>

            <TextView
                    android:id="@+id/pledge_amount"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/pledge_name" Of="@id/pledge_name"/>



        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>